<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/info_scatola"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="12dp">

		<TextView
			android:layout_margin="0dp"
			android:padding="0dp"
			android:id="@+id/info_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:layout_margin="0dp"
			android:padding="0dp"
			android:id="@+id/info_type"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:layout_margin="0dp"
			android:padding="0dp"
			android:id="@+id/info_created"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:layout_margin="0dp"
			android:padding="0dp"
			android:id="@+id/info_updated"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:layout_margin="0dp"
			android:padding="0dp"
			android:id="@+id/info_file"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:layout_margin="0dp"
			android:padding="0dp"
			android:id="@+id/info_deeplink"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@+id/info_statistiche"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>

		<Button
			android:id="@+id/info_aggiorna"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="@string/refresh"
			android:layout_marginTop="10dp"
			style="@style/AppTheme.BottoneNormale"
			android:visibility="gone"/>

		<LinearLayout
			android:id="@+id/info_testata"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="30dp"
			android:orientation="vertical"
			android:visibility="gone">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#c8960f47"
				android:paddingBottom="3dp"
				android:paddingTop="3dp"
				android:paddingStart="8dp"
				android:paddingEnd="8dp"
				android:text="@string/header"
				android:textColor="#fff"/>

			<TableLayout
				android:id="@+id/info_tabella"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#22960f47"
				android:padding="5dp"
				android:shrinkColumns="1" />
		</LinearLayout>

		<Button
			android:id="@+id/info_gestisci_testata"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="20dp"
			android:text="@string/update_header"
			style="@style/AppTheme.BottoneNormale"/>

	</LinearLayout>
</ScrollView>