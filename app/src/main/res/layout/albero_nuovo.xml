<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:orientation="vertical"
			android:padding="30dp">

			<Button
				android:visibility="gone"
				android:id="@+id/bottone_scarica_condiviso"
				style="@style/AppTheme.BottoneColorato"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dp"
				android:minWidth="350dp"
				android:text="@string/download_shared_tree"/>
			<Button
				android:id="@+id/bottone_albero_vuoto"
				style="@style/AppTheme.BottoneColorato"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dp"
				android:minWidth="350dp"
				android:text="@string/empty_tree"/>
			<Button
				android:id="@+id/bottone_scarica_esempio"
				style="@style/AppTheme.BottoneNormale"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dp"
				android:minWidth="350dp"
				android:text="@string/download_example"/>
			<Button
				android:id="@+id/bottone_importa_gedcom"
				style="@style/AppTheme.BottoneNormale"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dp"
				android:minWidth="350dp"
				android:text="@string/import_a_gedcom_file"/>
			<Button
				android:id="@+id/button_import_link"
				style="@style/AppTheme.BottoneNormale"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="16dp"
				android:minWidth="350dp"
				android:text="@string/import_from_shared_link"/>
			<Button
				android:id="@+id/bottone_recupera_backup"
				style="@style/AppTheme.BottoneNormale"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:minWidth="350dp"
				android:text="@string/import_backup"/>
		</LinearLayout>

		<ProgressBar
			android:id="@+id/nuovo_circolo"
			android:layout_width="70dp"
			android:layout_height="70dp"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:visibility="gone"/>

	</RelativeLayout>

</ScrollView>